<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/blackbg"
	android:orientation="vertical"
    tools:context=".SchedFri" >

<LinearLayout
	android:layout_marginTop="68dp"
    android:orientation="horizontal"
    android:id="@+id/ft2"
    android:layout_height="235dp"
    android:layout_width="wrap_content"
    android:background="@drawable/merleecomplete" />
<LinearLayout
    android:layout_below="@id/ft2"
    android:id="@+id/ft3"
    android:layout_height="45dp"
    android:layout_width="match_parent"
  	android:orientation="horizontal"
  	android:background="#8a8c8e"
	android:layout_marginTop="3dp"
	android:layout_marginBottom="3dp"
    >
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/prevsel"
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:layout_weight=".17"
    android:background="@drawable/previous"/>
<LinearLayout
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:layout_weight=".65">
    <ImageView
        android:contentDescription="schedfriday"
        android:layout_height="match_parent"
    	android:layout_width="match_parent"
        android:background="@drawable/schedtitlefri"
        />
    </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/nextsel"
	android:layout_height="match_parent"
	android:layout_width="0dp"
	android:layout_weight=".17"
    android:background="@drawable/next"/>

</LinearLayout>     


<LinearLayout
    android:layout_below="@id/ft3"
    android:id="@+id/ft4"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/fridschedbg"
    />

	<LinearLayout
		android:id="@+id/ft5"
		android:layout_height="75dp"
		android:layout_width="match_parent"
		android:weightSum="1"
		android:paddingLeft="50dp"
		android:paddingRight="50dp"
		android:gravity="center_horizontal">

		<Button
			android:id="@+id/first_button"
			android:layout_weight=".25"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginTop="15dp"
			android:background="@drawable/merleesel"
			/>

		<Button
			android:id="@+id/second_button"
			android:layout_weight=".25"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginTop="15dp"
			android:background="@drawable/cheukunsel"
		 />

		<Button
			android:id="@+id/third_button"
			android:layout_weight=".25"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginTop="15dp"
			android:background="@drawable/simonunsel" />

		<Button
			android:id="@+id/fourth_button"
			android:layout_weight=".25"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginTop="15dp"
			android:background="@drawable/arielunsel" />
	</LinearLayout>
</RelativeLayout>
